    {{ include('user/_form.html.twig', {'button_label': 'Mettre à jour'}) }}

    {% if is_granted('ROLE_ADMIN') %}
        <a href="{{ path('app_user_index') }}">
            <button type="button" class="btn btn-secondary mt-2">Retour à la liste</button>
